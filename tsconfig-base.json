{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "outDir": "./build",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "inlineSourceMap": true,        
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    /* Excludes */
    "exclude": [
        ".vscode",
        "build",     
        "node_modules"
    ],
    "references": [
        { "path": "./src"},
        { "path": "./tests"}
    ]
}